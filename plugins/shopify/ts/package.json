{
  "name": "@nself/plugin-shopify",
  "version": "1.0.0",
  "description": "Shopify store, orders, and product synchronization for nself",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nself-shopify": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "sync": "node dist/cli.js sync",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@nself/plugin-utils": "file:../../../shared",
    "@shopify/shopify-api": "^9.2.0",
    "fastify": "^4.24.0",
    "@fastify/cors": "^8.4.0",
    "dotenv": "^16.3.1",
    "commander": "^11.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0",
    "tsx": "^4.6.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "license": "MIT"
}
