# Shopify Plugin Configuration
# Copy to .env and fill in your values

# =============================================================================
# Required
# =============================================================================

# Shopify store domain (without https://)
# Example: my-store.myshopify.com
SHOPIFY_SHOP_DOMAIN=your-store.myshopify.com

# Shopify Admin API Access Token
# Get from: Shopify Admin > Settings > Apps > Develop apps > Create app
# Required scopes: read_products, read_customers, read_orders, read_inventory
SHOPIFY_ACCESS_TOKEN=shpat_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Database - PostgreSQL (uses nself CLI variables)
# =============================================================================
# These are typically inherited from the main nself CLI .env file
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=nself
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=
# POSTGRES_SSL=false

# =============================================================================
# Optional - API
# =============================================================================

# Shopify API version (default: 2024-01)
SHOPIFY_API_VERSION=2024-01

# =============================================================================
# Optional - Webhooks
# =============================================================================

# Webhook HMAC secret for signature verification
# Get from: Shopify Admin > Settings > Notifications > Webhooks
SHOPIFY_WEBHOOK_SECRET=your_webhook_secret_here

# =============================================================================
# Optional - Server
# =============================================================================

# Server port (default: 3003)
PORT=3003

# Plugin-specific port override (optional, takes precedence over PORT)
SHOPIFY_PLUGIN_PORT=3003

# Server host (default: 0.0.0.0)
HOST=0.0.0.0

# =============================================================================
# Optional - Sync
# =============================================================================

# Sync interval in seconds (default: 3600 = 1 hour)
SHOPIFY_SYNC_INTERVAL=3600

# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info
