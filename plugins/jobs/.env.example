# =============================================================================
# Jobs Plugin Environment Configuration
# =============================================================================

# -----------------------------------------------------------------------------
# Redis (Required)
# -----------------------------------------------------------------------------
JOBS_REDIS_URL=redis://localhost:6379
# JOBS_REDIS_URL=redis://user:password@host:port/db

# -----------------------------------------------------------------------------
# Dashboard
# -----------------------------------------------------------------------------
JOBS_DASHBOARD_ENABLED=true
JOBS_DASHBOARD_PORT=3105
JOBS_DASHBOARD_PATH=/dashboard

# -----------------------------------------------------------------------------
# Worker Configuration
# -----------------------------------------------------------------------------
JOBS_DEFAULT_CONCURRENCY=5
JOBS_RETRY_ATTEMPTS=3
JOBS_RETRY_DELAY=5000
JOBS_JOB_TIMEOUT=60000

# -----------------------------------------------------------------------------
# Monitoring
# -----------------------------------------------------------------------------
JOBS_ENABLE_TELEMETRY=true

# -----------------------------------------------------------------------------
# Cleanup (milliseconds)
# -----------------------------------------------------------------------------
JOBS_CLEAN_COMPLETED_AFTER=86400000    # 24 hours
JOBS_CLEAN_FAILED_AFTER=604800000      # 7 days

# -----------------------------------------------------------------------------
# Database (from nself CLI)
# -----------------------------------------------------------------------------
# These are typically inherited from the main .env file
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=nself
# DB_USER=postgres
# DB_PASSWORD=postgres
# DB_SSL=false

# Alternative PostgreSQL env var names
# POSTGRES_HOST=localhost
# POSTGRES_PORT=5432
# POSTGRES_DB=nself
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=postgres
