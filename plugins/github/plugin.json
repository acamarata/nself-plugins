{
  "name": "github",
  "version": "1.0.0",
  "description": "GitHub repository, issue, and workflow integration",
  "author": "nself",
  "license": "Source-Available",
  "homepage": "https://github.com/acamarata/nself-plugins/tree/main/plugins/github",
  "repository": "https://github.com/acamarata/nself-plugins",
  "minNselfVersion": "0.4.8",
  "category": "devops",
  "tags": ["github", "git", "ci", "devops", "issues", "pull-requests"],

  "tables": [
    "github_repositories",
    "github_issues",
    "github_pull_requests",
    "github_commits",
    "github_releases",
    "github_workflow_runs",
    "github_deployments",
    "github_webhook_events"
  ],

  "webhooks": {
    "push": "Code pushed to repository",
    "pull_request": "PR opened, closed, or merged",
    "pull_request_review": "PR review submitted",
    "issues": "Issue created, updated, or closed",
    "issue_comment": "Comment on issue or PR",
    "release": "Release published",
    "workflow_run": "GitHub Actions workflow completed",
    "deployment": "Deployment created",
    "deployment_status": "Deployment status changed",
    "create": "Branch or tag created",
    "delete": "Branch or tag deleted",
    "star": "Repository starred",
    "fork": "Repository forked"
  },

  "actions": {
    "sync": "Sync repository data",
    "repos": "List and manage repositories",
    "issues": "View and manage issues",
    "prs": "View and manage pull requests",
    "releases": "View releases",
    "actions": "View workflow runs",
    "webhook": "Manage webhook events"
  },

  "envVars": {
    "required": [
      "GITHUB_TOKEN"
    ],
    "optional": [
      "GITHUB_WEBHOOK_SECRET",
      "GITHUB_ORG",
      "GITHUB_REPOS"
    ]
  },

  "config": {
    "apiVersion": "2022-11-28",
    "webhookPath": "/webhooks/github",
    "syncInterval": 3600,
    "defaultBranch": "main"
  }
}
